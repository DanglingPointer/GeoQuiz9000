<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:paddingTop="16dp"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:text="Title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/question"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:text="Where is this place?" />

    <ImageView
        android:id="@+id/question_picture"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:layout_below="@+id/question"
        android:layout_centerHorizontal="true"
        android:contentDescription="Image for Question"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/call_to_action"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_picture"
        android:layout_centerHorizontal="true"
        android:text="Press long on the map to set the marker!" />

    <TextView
        android:paddingBottom="16dp"
        android:id="@+id/answer_button"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="@color/wallet_holo_blue_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/call_to_action"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:text="LET'S GO" />

</RelativeLayout>